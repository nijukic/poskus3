@model aplikacija.Models.Oseba

@{

    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Oseba</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Priimek)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Priimek)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Telefon)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Telefon)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ocene)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Course Title</th>
                    <th>Grade</th>
                </tr>
                @foreach (var item in Model.Ocene)

                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Artikel.Naziv)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Vrednost)
                        </td>
                    </tr>

                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.OsebaID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
